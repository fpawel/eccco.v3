                                                            <TextBlock Text="{Binding Info.Error1}" Margin="3" Foreground="Yellow" />
                                                        </StackPanel>
                                                    </Rectangle.ToolTip>
                                                </Rectangle>
                                            </Grid>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

