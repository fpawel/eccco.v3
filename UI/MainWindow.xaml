                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_left_right}" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Button>

                                <Button Command="{Binding AddCalcTermoPoint}" Margin="5,0"
