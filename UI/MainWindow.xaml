                      TextElement.FontSize="16"
                      VerticalAlignment="Center" HorizontalAlignment="Center" >
                    <GroupBox.Header>
                        <Grid Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
