                                               Visibility="{Binding IsError, Converter={StaticResource ShowIfFalseConverter}}" >
                                            <Rectangle.Fill>
                                                <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_information_circle}" />
                                            </Rectangle.Fill>
                                        </Rectangle>

